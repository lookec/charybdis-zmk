#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
    require-prior-idle-ms = <150>; \
  };

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 40

combos {
  compatible = "zmk,combos";

        combo_to_korean {
            timeout-ms = <50>;
            key-positions = <17 18>;
            layers = <0>;
            bindings = <&to_korean>;
        };
        
        combo_to_english {
            timeout-ms = <50>;
            key-positions = <17 18>;
            layers = <1>;
            bindings = <&to_english>;
        };

  COMBO(l_leftclick, &mkp LCLK, 11 12, BASE, COMBO_TERM_SLOW)
  COMBO(l_rightclick, &mkp RCLK, 21 22, BASE, COMBO_TERM_SLOW)
  COMBO(l_middleclick, &mkp MCLK, 22 23, BASE, COMBO_TERM_SLOW)

  COMBO(r_leftclick, &mkp LCLK, 27 28, BASE, COMBO_TERM_SLOW)
  COMBO(r_rightclick, &mkp RCLK, 28 28, BASE, COMBO_TERM_SLOW)
  COMBO(r_middleclick, &mkp MCLK, 27 29, BASE, COMBO_TERM_SLOW)
}; 
